#!/bin/sh

bat=/sys/class/power_supply/BATT/
per="$(cat "$bat/capacity")"

icon() {

	if [ $(cat "$bat/status") = Charging ]; then
		icon="î€Š"
			elif [ $(cat "$bat/status") = "Unknown" ]; then
			icon="ğŸ²"
	else
		if [ "$per" -gt "75" ]; then
			icon="ï•¸"
				elif [ "$per" -gt "70" ]; then
				icon="ï–"
				elif [ "$per" -gt "65" ]; then
				icon="ï–€"
				elif [ "$per" -gt "60" ]; then
				icon="ï•¿"
				elif [ "$per" -gt "55" ]; then
				icon="ï•¾"
				elif [ "$per" -gt "50" ]; then
				icon="ï•½"
				elif [ "$per" -gt "40" ]; then
				icon="ï•¼"
				elif [ "$per" -gt "30" ]; then
				icon="ï•»"
				elif [ "$per" -gt "20" ]; then
				icon="ï•»"
				elif [ "$per" -gt "10" ]; then
				icon="ï•º"
		else
			icon="ï–"
				fi
				fi
				echo "$icon"
}

percent() {
	echo $per
}

[ "$1" = "icon" ] && icon && exit
[ "$1" = "capacity" ] && percent && exit
exit
